sphaleron_verbose::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
        "DEFINES= -DGF_INTEGRATOR=INTEGRATOR_LUSCHER \
        -DSPHALERON -DREGIONS -DBLOCKING -DUSE_FIELD \
        -DREPORT=2" \
        "EXTRA_OBJECTS= ax_gauge.o \
        sphaleron.o \
        ${USEFIELD_OBJECTS}" \

sphaleron::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
        "DEFINES= -DGF_INTEGRATOR=INTEGRATOR_LUSCHER \
        -DSPHALERON -DREGIONS -DBLOCKING -DUSE_FIELD \
        -DREPORT=0 " \
        "EXTRA_OBJECTS= ax_gauge.o \
        sphaleron.o \
        ${USEFIELD_OBJECTS}" \

sphaleron_nofield_verbose::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
        "DEFINES= -DGF_INTEGRATOR=INTEGRATOR_LUSCHER \
        -DSPHALERON -DREGIONS -DBLOCKING -DREPORT=2 " \
        "EXTRA_OBJECTS= ax_gauge.o \
        sphaleron.o \
        ${USEFIELD_OBJECTS}" \

sphaleron_nofield::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
        "DEFINES= -DGF_INTEGRATOR=INTEGRATOR_LUSCHER \
        -DSPHALERON -DREGIONS -DBLOCKING -DREPORT=0 " \
        "EXTRA_OBJECTS= ax_gauge.o \
        sphaleron.o \
        ${USEFIELD_OBJECTS}" \

debug_blocking::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
        "DEFINES= -DGF_INTEGRATOR=INTEGRATOR_LUSCHER \
        -DSPHALERON -DREGIONS -DBLOCKING -DREPORT=0 \
        -DUSE_FIELD -DDEBUG_BLOCKING " \
        "EXTRA_OBJECTS= ax_gauge.o \
        sphaleron.o \
        ${USEFIELD_OBJECTS}" \

half_lattice_test::
	${MAKE} -f ${MAKEFILE} target "MYTARGET= $@" \
	"DEFINES= -DGF_INTEGRATOR=INTEGRATOR_EULER \
	-DSPHALERON -DREGIONS -DBLOCKING -DUSE_FIELD \
	-DHALF_LATTICE_TEST -DREPORT=2 " \
	"EXTRA_OBJECTS= ax_gauge.o \
	sphaleron.o \
	${USEFIELD_OBJECTS}" \

clean:
	-/bin/rm -f *.o

# Rules for generic routines
include ../generic/Make_template

# Rules for generic_ks routines
include ../generic_ks/Make_template

# Rules for generic_wilson routines
include ../generic_wilson/Make_template

libmake:
	@echo Building libraries with ${MAKELIBRARIES}
	cd ${LIBDIR} ;\
	${MAKE} -f ${MAKELIBRARIES} "APP_CC=${CC}" "PRECISION=${PRECISION}" all

localmake: ${OBJECTS} ${LIBRARIES}
	${LD} -o ${MYTARGET} ${LDFLAGS} \
	${OBJECTS} ${QCDLIB} ${ILIB} -lm
	touch localmake

target: libmake localmake
